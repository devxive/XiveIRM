<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" class="readonly"
			label="COM_XIVEIRM_FORM_LBL_TABAPP_ID"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			readonly="true" />

		<field name="client_id" type="usergroup" size="40" class="inputbox"
			label="COM_XIVEIRM_FORM_LBL_TABAPP_USERGROUP"
			description="COM_XIVEIRM_FORM_DESC_TABAPP_USERGROUP"
			filter="safehtml" />

		<field name="plugin" type="sql" class="inputbox"
			label="COM_XIVEIRM_FORM_LBL_TABAPP_PLUGIN"
			description="COM_XIVEIRM_FORM_DESC_TABAPP_PLUGIN"
			query="SELECT element, name FROM #__extensions WHERE folder = 'irmapp'"
			key_field="element" value_field="name" />

		<field name="folder" type="text" class="inputbox disabled" disabled="disabled"
			label="Plugin Folder"
			description="COM_XIVEIRM_FORM_DESC_TABAPP_PLUGIN" />

		<field name="catid" type="category"
			label="COM_XIVEIRM_FORM_LBL_TABAPP_CATEGORY"
			description="COM_XIVEIRM_FORM_DESC_TABAPP_CATEGORY"
			extension="com_xiveirm"
			filter="raw">
				<option value="0">COM_XIVEIRM_FORM_OPTION_TABAPP_CATEGORY</option>
		</field>

		<field name="filter_catid" type="category"
			label="COM_XIVEIRM_FORM_LBL_TABAPP_CATEGORY"
			description="COM_XIVEIRM_FORM_DESC_TABAPP_CATEGORY"
			extension="com_xiveirm"
			show_root="1"
			onchange="this.form.submit();" />

		<field name="config" type="editor" class="inputbox"
			label="COM_XIVEIRM_FORM_LBL_TABAPP_CONFIG"
			description="COM_XIVEIRM_FORM_DESC_TABAPP_CONFIG"
			editor="codemirror"
			filter="safehtml" />

		<field name="state" type="list" size="1" class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			default="1">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset> 
	<fieldset name="accesscontrol">
		<field name="asset_id" type="hidden"
			filter="unset" />

		<field name="rules" type="rules" class="inputbox"
			label="JFIELD_RULES_LABEL"
			translate_label="false"
			filter="rules"
			validate="rules"
			component="com_xiveirm"
			section="plugin" />
	</fieldset>
</form>