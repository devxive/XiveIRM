    <version>3.0.0</version>
    <description>The Medical Transport Coordination App</description>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>medtranscoord.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <languages folder="site">
		<language tag="en-GB">language/en-GB.com_medtranscoord.ini</language>
    </languages>
    <administration>
        <menu img="components/com_medtranscoord/assets/images/s_com_medtranscoord.png" >COM_MEDTRANSCOORD</menu>
        <submenu>
            
			<menu link="option=com_medtranscoord&amp;view=orders" view="orders" img="components/com_medtranscoord/assets/images/s_orders.png" alt="Medtranscoord/Orders">COM_MEDTRANSCOORD_TITLE_ORDERS</menu>

			<menu link="option=com_medtranscoord&amp;view=additionalinformations" view="additionalinformations" img="components/com_medtranscoord/assets/images/s_additionalinformations.png" alt="Medtranscoord/Additionalinformations">COM_MEDTRANSCOORD_TITLE_ADDITIONALINFORMATIONS</menu>

			<menu link="option=com_medtranscoord&amp;view=additionalbillinginformations" view="additionalbillinginformations" img="components/com_medtranscoord/assets/images/s_additionalbillinginformations.png" alt="Medtranscoord/Additionalbillinginformations">COM_MEDTRANSCOORD_TITLE_ADDITIONALBILLINGINFORMATIONS</menu>

			<menu link="option=com_medtranscoord&amp;view=additionalstatisticinformations" view="additionalstatisticinformations" img="components/com_medtranscoord/assets/images/s_additionalstatisticinformations.png" alt="Medtranscoord/Additionalstatisticinformations">COM_MEDTRANSCOORD_TITLE_ADDITIONALSTATISTICINFORMATIONS</menu>

			<menu link="option=com_medtranscoord&amp;view=selectlists" view="selectlists" img="components/com_medtranscoord/assets/images/s_selectlists.png" alt="Medtranscoord/Selectlists">COM_MEDTRANSCOORD_TITLE_SELECTLISTS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>medtranscoord.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
		<language tag="en-GB">language/en-GB.com_medtranscoord.ini</language>
		<language tag="en-GB">language/en-GB.com_medtranscoord.sys.ini</language>
        </languages>
    </administration>
</extension>