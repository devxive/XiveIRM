<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_MC3PRM_FORM_LBL_EVENT_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_MC3PRM_FORM_LBL_EVENT_CREATED_BY"
            description="COM_MC3PRM_FORM_DESC_EVENT_CREATED_BY"  /> 

       <field name="customer_id" type="text"
                
            label="COM_MC3PRM_FORM_LBL_EVENT_CUSTOMER_ID"
            description="COM_MC3PRM_FORM_DESC_EVENT_CUSTOMER_ID" 
                
                
                
            filter="raw"
            maxlength="50" /> 

       <field name="prm_id" type="sql" class="inputbox"
        
            label="COM_MC3PRM_FORM_LBL_EVENT_PRM_ID"
            description="COM_MC3PRM_FORM_DESC_EVENT_PRM_ID" 
        
        
        
         required="true" 
        query="SELECT 0 AS `id`, '- Select Patient -' AS `last_name` UNION SELECT `id`, `last_name` FROM `#__mc3_prm_masterdata`" key_field="id" value_field="last_name"
         /> 

       <field name="physical_state" type="sql" class="inputbox"
        
            label="COM_MC3PRM_FORM_LBL_EVENT_PHYSICAL_STATE"
            description="COM_MC3PRM_FORM_DESC_EVENT_PHYSICAL_STATE" 
        
        
        
         required="true" 
        query="SELECT 0 AS `ps_id`, '- Select Physical State -' AS `ps_name` UNION SELECT `ps_id`, `ps_name` FROM `#__mc3_prm_add_physicalstates`" key_field="ps_id" value_field="ps_name"
         /> 

       <field name="description" type="textarea"
                
            label="COM_MC3PRM_FORM_LBL_EVENT_DESCRIPTION"
            description="COM_MC3PRM_FORM_DESC_EVENT_DESCRIPTION" 
                
                
                
            cols="100"
            rows="8"
            filter="raw" /> 

       <field name="start" type="calendar"
                
            label="COM_MC3PRM_FORM_LBL_EVENT_START"
            description="COM_MC3PRM_FORM_DESC_EVENT_START" 
                
                
                 required="true" 
            filter="raw" /> 

       <field name="end" type="calendar"
                
            label="COM_MC3PRM_FORM_LBL_EVENT_END"
            description="COM_MC3PRM_FORM_DESC_EVENT_END" 
                
                
                 required="true" 
            filter="raw" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
