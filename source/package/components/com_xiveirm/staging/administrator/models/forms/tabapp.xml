<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_XIVEIRM_FORM_LBL_TABAPP_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="client_id" type="text" size="40" class="inputbox"
        
            label="COM_XIVEIRM_FORM_LBL_TABAPP_CLIENT_ID"
            description="COM_XIVEIRM_FORM_DESC_TABAPP_CLIENT_ID" 
         default="0" 
        
        
        filter="safehtml" /> 

       <field name="app_key" type="text" size="40" class="inputbox"
        
            label="COM_XIVEIRM_FORM_LBL_TABAPP_APP_KEY"
            description="COM_XIVEIRM_FORM_DESC_TABAPP_APP_KEY" 
        
        
        
        filter="safehtml" /> 

       <field name="tab_key" type="text" size="40" class="inputbox"
        
            label="COM_XIVEIRM_FORM_LBL_TABAPP_TAB_KEY"
            description="COM_XIVEIRM_FORM_DESC_TABAPP_TAB_KEY" 
        
        
        
        filter="safehtml" /> 

       <field name="catid" type="category"
                
            label="COM_XIVEIRM_FORM_LBL_TABAPP_CATID"
            description="COM_XIVEIRM_FORM_DESC_TABAPP_CATID" 
                
                
                
            extension="com_xiveirm.tabapps.catid"
            filter="raw" /> 

 
		<field name="filter_catid" type="category"
            label="COM_XIVEIRM_FORM_LBL_TABAPP_CATID"
            description="COM_XIVEIRM_FORM_DESC_TABAPP_CATID"  extension="com_xiveirm.tabapps.catid" show_root="1" onchange="this.form.submit();" /> 

       <field name="config" type="editor" buttons="true"
        class="inputbox"
        filter="safehtml"
        
        
        
        
            label="COM_XIVEIRM_FORM_LBL_TABAPP_CONFIG"
            description="COM_XIVEIRM_FORM_DESC_TABAPP_CONFIG"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_xiveirm"
                            section="tabapp"
                        />

	</fieldset>

</form>
